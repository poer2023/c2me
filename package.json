    "express": "^4.21.2",
    "markdown-it": "^14.1.0",
    "marked": "^16.1.1",
    "node-fetch": "^3.3.2",
    "p-queue": "^8.1.0",
    "redis": "^5.6.1",
    "simple-git": "^3.28.0",
    "strip-ansi": "^7.1.0",
    "telegraf": "^4.16.3",
